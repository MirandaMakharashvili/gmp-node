{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                    
      "outDir": "./dist",
      "baseUrl": "./",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", ".git", "dist"],

  }
