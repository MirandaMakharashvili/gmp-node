{
    "name": "testing-code",
    "version": "1.0.0",
    "description": "",
    "main": "",
    "scripts": {
        "start": "nodemon ./src/index.ts",
        "seeders": "npx ts-node ./src/seeders/seeders.ts",
        "stop": "pm2 stop ngmp-network-app",
        "update-schema": "mikro-orm schema:update --dump",
        "mikro:create": "mikro-orm migration:create",
        "mikro:up": "mikro-orm migration:up",
        "mikro:down": "mikro-orm migration:down",
        "migration-fresh": "mikro-orm migration:fresh",
        "migration-seed": "npm run migration-fresh -- --seed",
        "test": "jest src/tests/unit_integration",
        "test:e2e": "jest src/tests/e2e",
        "test:coverage": "jest --coverage"
    },
    "author": "Miranda Makharashvili",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.0.0",
        "@types/node": "^18.7.16",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.8",
        "jest": "^29.0.3",
        "nodemon": "3.1.0",
        "pm2": "^5.3.1",
        "supertest": "^6.2.4",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@mikro-orm/cli": "^6.2.2",
        "@mikro-orm/core": "^6.2.2",
        "@mikro-orm/entity-generator": "^6.2.2",
        "@mikro-orm/migrations": "^6.2.2",
        "@mikro-orm/postgresql": "^6.2.2",
        "@mikro-orm/seeder": "^6.2.2",
        "@mikro-orm/sqlite": "^6.2.2",
        "axios": "^0.27.2",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "joi": "^17.12.2"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/config/mikro-orm.config.ts",
            "./src/config/mikro-orm.config.js"
        ]
    },
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
